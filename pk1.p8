__lua__

local a_loop = 1
local a_stp = 1

local p1 = {x = 10, y = 30}
local p2 = {x = 40, y = 30}

function _init()
end

function _draw()
	cls()
	

 if btn(5) then
 
 	spr(5, p1.x, p1.y)
  if (p1.x + 9 > p2.x) then
  	spr(26, p2.x, p2.y)
  	return
  end
  
 elseif btn(4) then
 	spr(6, p1.x, p1.y)
 	
 	if (p1.x + 9 > p2.x) then
  	spr(26, p2.x, p2.y)
  	return
  end
 else
	 spr(a_stp, p1.x, p1.y)
 end
	
	spr(16 + a_stp, p2.x, p2.y)
end

function _update()
	a_loop += 1
	
	if a_loop > 40 then
		a_loop = 1
			
	end
	
	if (a_loop % 10 == 0) then
		a_stp += 1
	end
	
	if (a_stp > 4) then 
	 a_stp = 1
	end
	
	if btn(0) then
		p1.x -= 1
	elseif btn(1) then
		p1.x += 1
	elseif btn(2) then
		p1.y -= 1
	elseif btn(3) then
		p1.y += 1
	end
end
